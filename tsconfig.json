{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@glyph-cat/eslint-config": [
        "./packages/eslint-config"
      ],
      "@glyph-cat/swiss-army-knife": [
        "./packages/core/src"
      ],
      "@glyph-cat/swiss-army-knife-react": [
        "./packages/react/src"
      ],
      "@glyph-cat/equality": [
        "./packages/equality/src"
      ],
      "@glyph-cat/localization": [
        "./packages/localization/src"
      ],
      "@glyph-cat/localization-react": [
        "./packages/localization-react/src"
      ],
      "@glyph-cat/cleanup-manager": [
        "./packages/cleanup-manager/src"
      ],
      "@glyph-cat/react-test-utils": [
        "./packages/react-test-utils/src"
      ],
      "@glyph-cat/ml-helpers": [
        "./packages/ml-helpers/src"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "**/*.draft*",
    "**/*.old*",
    "**/*.scripted*"
  ],
  "include": [
    "eslint.config.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
