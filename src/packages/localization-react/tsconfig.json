{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./temp/tsc/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./temp/tsc/js",
    "paths": {
      "@glyph-cat/swiss-army-knife": [
        "../core/src",
      ],
      "@glyph-cat/localization": [
        "../localization/src",
      ],
      "@glyph-cat/cleanup-manager": [
        "../cleanup-manager/src",
      ],
      "@glyph-cat/react-test-utils": [
        "../react-test-utils/src",
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "jsx": "react-jsx",
    "stripInternal": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "**/*.draft*",
    "**/*.old*",
    "**/*.scripted*",
  ],
  "include": [
    "src",
  ]
}