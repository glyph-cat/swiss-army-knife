{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
  "mainEntryPointFilePath": "<projectFolder>/temp/tsc/types/core/src/index.d.ts",
  "compiler": {
    "overrideTsconfig": {
      "compilerOptions": {
        "paths": {
          // Paths are meant to be left out, then API Extractor will show warning:
          // (TS2307) Cannot find module '...' or its corresponding type declarations;
          // but output file will import types from package and there will be no overlap.
          // This is a most likely a happy mistake.
          "@glyph-cat/foundation": []
        }
      }
    }
  },
  "apiReport": {
    "enabled": false
  },
  "docModel": {
    "enabled": false
  },
  "dtsRollup": {
    "enabled": true,
    // `untrimmedFilePath` defaults to 'dist' folder, must use empty string to
    // disable it
    "untrimmedFilePath": "",
    "publicTrimmedFilePath": "<projectFolder>/lib/types/index.d.ts",
    "omitTrimmingComments": true
  },
  "tsdocMetadata": {
    "enabled": false
  },
  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      },
      "tsdoc-escape-right-brace": {
        "logLevel": "none"
      },
      "tsdoc-escape-greater-than": {
        "logLevel": "none"
      },
      "tsdoc-html-tag-missing-equals": {
        "logLevel": "none"
      },
      "tsdoc-html-tag-missing-greater-than": {
        "logLevel": "none"
      },
      "tsdoc-html-tag-missing-string": {
        "logLevel": "none"
      },
      "tsdoc-malformed-html-name": {
        "logLevel": "none"
      },
      "tsdoc-malformed-inline-tag": {
        "logLevel": "none"
      },
      "tsdoc-param-tag-with-invalid-type": {
        "logLevel": "none"
      },
      "tsdoc-undefined-tag": {
        "logLevel": "none"
      },
      "tsdoc-unnecessary-backslash": {
        "logLevel": "none"
      },
      // "": {
      //   "logLevel": "none"
      // },
      // "": {
      //   "logLevel": "none"
      // }
    }
  }
}