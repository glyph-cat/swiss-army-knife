{
  "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
  "mainEntryPointFilePath": "<projectFolder>/temp/tsc/types/ml-helpers/src/index.d.ts",
  "compiler": {
    "overrideTsconfig": {
      "compilerOptions": {
        "paths": {
          // Paths are meant to be left out, then API Extractor will show warning:
          // (TS2307) Cannot find module '...' or its corresponding type declarations;
          // but output file will import types from package and there will be no overlap.
          // This is a most likely a happy mistake.
          "@glyph-cat/foundation": [],
          "@glyph-cat/swiss-army-knife": []
        }
      }
    }
  },
  "apiReport": {
    "enabled": false
  },
  "docModel": {
    "enabled": false,
    "apiJsonFilePath": "<projectFolder>/temp/docs/json/generated.api.json"
  },
  "dtsRollup": {
    "enabled": true,
    // `untrimmedFilePath` defaults to 'dist' folder, must use empty string to
    // disable it
    "untrimmedFilePath": "",
    "publicTrimmedFilePath": "<projectFolder>/lib/types/index.d.ts",
    "omitTrimmingComments": true
  },
  "enumMemberOrder": "preserve",
  "tsdocMetadata": {
    "enabled": false
  },
  "messages": {
    "compilerMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "extractorMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    },
    "tsdocMessageReporting": {
      "default": {
        "logLevel": "warning"
      }
    }
  }
}