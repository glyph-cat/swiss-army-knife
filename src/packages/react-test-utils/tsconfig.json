{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./temp/tsc/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./temp/tsc/js",
    "paths": {
      "@glyph-cat/foundation": [
        "../foundation/src",
      ],
      "@glyph-cat/swiss-army-knife": [
        "../core/src",
      ],
      "@glyph-cat/css-utils": [
        // This is due to indirect dependency, even though never used.
        "../css-utils/src",
      ],
      "@glyph-cat/type-checking": [
        "../type-checking/src",
      ],
      "@glyph-cat/cleanup-manager": [
        "../cleanup-manager/src",
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "jsx": "react-jsx",
    "stripInternal": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "**/*.draft*",
    "**/*.old*",
    "**/*.scripted*",
    "**/*.test*",
  ],
  "include": [
    "src",
  ]
}