{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./temp/tsc/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./temp/tsc/js",
    "paths": {
      "@glyph-cat/foundation": [
        "../foundation/src",
      ],
      "@glyph-cat/type-checking": [
        "../type-checking/src",
      ],
    },
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "target": "ES2020",
  },
  "exclude": [
    "node_modules",
    "./src/**/*.draft*",
    "./src/**/*.old*",
  ],
  "include": [
    "./src",
  ],
}