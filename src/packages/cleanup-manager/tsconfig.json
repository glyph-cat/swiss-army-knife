{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./temp/tsc/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./temp/tsc/js",
    "paths": {
      "@glyph-cat/foundation": [
        "../foundation/src",
      ],
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2020",
  },
  "exclude": [
    "node_modules",
    "**/*.draft*",
    "**/*.old*",
    "**/*.scripted*",
    "**/*.test*",
  ],
  "include": [
    "./src",
    "./custom.d.ts"
  ],
}